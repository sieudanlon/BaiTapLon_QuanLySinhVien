<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="20dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="10"
        android:orientation="horizontal">
        <TextView
            android:layout_weight="6"
            android:id="@+id/tv_ten"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Trung Shimon"
            android:textSize="25dp"
            android:textColor="#032AFF"
            android:textStyle="bold"/>
        <Button
            android:id="@+id/btn_detail"
            android:layout_width="20dp"
            android:layout_height="30dp"
            android:layout_weight="2"
            android:background="#000000"
            android:text="Detail"
            android:textAppearance="@style/TextAppearance.AppCompat.Small"
            android:textColor="#FFF" />

        <ImageView
            android:id="@+id/iv_delete"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/ic_delete_black_36dp" />

        <ImageView
            android:layout_weight="1"
            android:id="@+id/iv_edit"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_edit_black_36dp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="10"
        android:orientation="horizontal">

        <TextView
            android:layout_weight="6"
            android:id="@+id/tv_namsinh"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Nam sinh : "
            android:textSize="20dp"
            android:textColor="#4CAF50"/>
        <TextView
            android:layout_weight="4"
            android:id="@+id/tv_tinhthanh"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Tinh Thanh : "
            android:textSize="20dp"
            android:textColor="#000000"/>
    </LinearLayout>
</LinearLayout>